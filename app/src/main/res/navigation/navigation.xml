<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="org.d3if0119.pomodoroappnew.ui.home.HomeFragment"
        android:label="PomodoroApp"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_homeFragment_to_tasksFragment"
            app:destination="@id/tasksFragment" />
        <action
            android:id="@+id/action_homeFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="org.d3if0119.pomodoroappnew.AboutFragment"
        android:label="About" />
    <fragment
        android:id="@+id/tasksFragment"
        android:name="org.d3if0119.pomodoroappnew.ui.tasks.TasksFragment"
        android:label="Tasks"
        tools:layout="@layout/tasks_fragment" />
</navigation>